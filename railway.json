{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc", "postgresql"]
        },
        "install": {
          "cmds": [
            "cd travel-backend",
            "pip install --upgrade pip",
            "pip install -r requirements.txt"
          ]
        },
        "build": {
          "cmds": [
            "cd travel-backend",
            "mkdir -p logs",
            "python manage.py collectstatic --noinput --clear"
          ]
        }
      },
      "start": {
        "cmd": "cd travel-backend && python manage.py migrate --noinput && gunicorn travelapi.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 180 --log-level info --access-logfile - --error-logfile -"
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
